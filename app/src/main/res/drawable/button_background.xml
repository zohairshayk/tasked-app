<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/darker_gray" /> <!-- Button color when pressed -->
            <corners android:radius="12dp" /> <!-- Rounded button corners -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/white" /> <!-- Default button color -->
            <corners android:radius="12dp" /> <!-- Rounded button corners -->
        </shape>
    </item>
</selector>
